@model LoginVM 
@{
    ViewData["Title"] = "Login";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4 mt-5" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end justify-content-center text-center">
            <div class="col-lg-7">
                <h2 class="mb-0">Login</h2>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control form-control-lg">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control form-control-lg">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Log In" class="btn btn-primary btn-lg px-5">
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

