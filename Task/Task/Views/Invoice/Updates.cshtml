@model Invoice

@{
    ViewData["Title"] = "Updates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container" style="margin-top:150px">
    <h4 class="card-title">Update Invoice</h4>
    <form class="forms-sample" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvoiceNote"></label>
                    <input class="form-control" asp-for="InvoiceNote" placeholder="InvoiceNote">
                    <span asp-validation-for="InvoiceNote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvoiceNumber"></label>
                    <input asp-for="InvoiceNumber" class="form-control" placeholder="InvoiceNumber">
                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="TaxAmount"></label>
                    <input asp-for="TaxAmount" class="form-control" placeholder="TaxAmount">
                    <span asp-validation-for="TaxAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NetAmount"></label>
                    <input asp-for="NetAmount" class="form-control" placeholder="NetAmount">
                    <span asp-validation-for="NetAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Select Client</label>
                    <select asp-for="ClientId">
                        @foreach (var item in ViewBag.Client)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Select Project</label>
                    <select asp-for="ProjectId">
                        @foreach (var item in ViewBag.Project)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Select Payment Status</label>
                    <select asp-for="PaymentStatus">
                        <option value="0">Pending</option>
                        <option value="1">Done</option>

                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Update</button>
        <a class="btn btn-light" asp-controller="home" asp-action="Index">Cancel</a>
    </form>
</div>