@model User
@{
    ViewData["Title"] = "DeleteUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-3">
    @Model.Name
</div>
<div class="mt-3">
    @Model.UserName
</div>
<div class="mt-3">
    @Model.Email
</div>
<div class="row mt-3">
    <form method="post">
        <input type="text" hidden value="@Model.Id" name="id" />
        <input type="submit" class="btn btn-danger ml-3"<i class="mdi mdi-delete"></i>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>

