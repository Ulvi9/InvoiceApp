@model UserRoleVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="detail-box" style="width:400px; height:250px; background-color:red;">
    <h3 style="text-align:center; padding-top: 15px; color:white">@Model.User.Name</h3>

    @foreach (var item in Model.UserRoles)
    {
        <p style="text-align:center; color:black; font-size:21px">@item</p>
    }

</div><h1>Details</h1>

